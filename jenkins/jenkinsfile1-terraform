#!/usr/bin/env groovy
properties([disableConcurrentBuilds()])

TARGET_BRANCH_NAME = "master"

pipeline {
  agent {
    label 'ubuntu'
  }
  triggers { pollSCM('* * * * *') }
  options {
    timestamps()
  }

  stages {
    stage('Check terraform') {
      steps {
        slackSend (color: '#FFFF00', message: "STARTED: Pipeline '${env.JOB_NAME}.[${env.BUILD_NUMBER}]':(${env.JOB_DISPLAY_URL})")
        deleteDir() // Clean up the workspace
        checkout scm
        sh "terraform --version"
      }
    }

    stage('Az login'){
      steps {
        withCredentials([azureServicePrincipal('AZURE_CREDENTIALS')]) {
          sh "az login --service-principal -u $AZURE_CLIENT_ID -p $AZURE_CLIENT_SECRET -t $AZURE_TENANT_ID"
          sh "az account set --subscription $AZURE_SUBSCRIPTION_ID"
        }
      }
    }

    stage('Delete old infrastructure'){
      steps {
        script{
          try {
            sh """
             az group delete -n prd-sqlserver-rg-eastus-crashcourse -y
             az group delete -n prd-vm-rg-eastus-crashcourse -y
            """
          } catch (Exception err){
            echo 'Failed to delete old infrastructure'
          }
        }
      }
    }

    stage('Terraform init') {
      steps {
        sh "git checkout '${TARGET_BRANCH_NAME}'"
        withCredentials([file(credentialsId: 'sql_variables', variable: 'sql_variables')]) {
          sh "sudo cp $sql_variables ./tf_sqlserver/variables.tf"
          sh "sudo chmod 664 ./tf_sqlserver/variables.tf"
        }
        withCredentials([file(credentialsId: 'vm_variables', variable: 'vm_variables')]) {
          sh "sudo cp $vm_variables ./tf_vms/variables.tf"
          sh "sudo chmod 664 ./tf_vms/variables.tf"
        }
        sh """
          cd ./tf_vms/
          terraform init --get=true
          cd ../tf_sqlserver/
          terraform init --get=true
        """
      }
    }

    stage('Terraform plan') {
      steps {
        sh """
          cd ./tf_sqlserver/
          sudo terraform plan -out=bd_plan.out -no-color
          cd ../tf_vms/
          sudo terraform plan -out=vm_plan.out -no-color
        """
      }
    }

    stage('Terraform apply database') {
      steps {
        script {
          sh "cd ./tf_sqlserver/"
          try {
            sh "sudo terraform apply -no-color bd_plan.out"
            slackSend(color: '#00FF00', message: "SUCCESS: Pipeline '${env.JOB_NAME}.[${env.BUILD_NUMBER}]':(${env.JOB_DISPLAY_URL}). Terraform apply database success")
          } catch (Exception err){
            slackSend(color: '#FF0000', message: "FAILED: Pipeline '${env.JOB_NAME}.[${env.BUILD_NUMBER}]':(${env.JOB_DISPLAY_URL}). Terraform apply database failed.")
          }
        }
      }
    }

    stage('Terraform apply vm') {
      steps {
        script {
          sh "cd ./tf_vms/"
          try {
            sh "sudo terraform apply -no-color vm_plan.out"
            slackSend(color: '#00FF00', message: "SUCCESS: Pipeline '${env.JOB_NAME}.[${env.BUILD_NUMBER}]':(${env.JOB_DISPLAY_URL}). Terraform apply virtual machines success")
          } catch (Exception err){
            slackSend(color: '#FF0000', message: "FAILED: Pipeline '${env.JOB_NAME}.[${env.BUILD_NUMBER}]':(${env.JOB_DISPLAY_URL}). Terraform apply virtual machines failed.")
          }
        }
      }
    }
  }
}
